#include <stdio.h>
#include <stdlib.h>

int main (){
    float p, a, i;
    printf ("Digite seu peso: \n");
    scanf ("%f",&p);
    printf ("Digite sua altura: \n");
    scanf ("%f", &a);
    IMC = p/(a * a);
    printf ("IMC = %f \n", IMC);

    if(i < 16) {
        printf("\nPerigo de vida.");
    } else if(i >= 16 && i < 17) {
            printf("\nMuito abaixo do peso.");
    } else if(i >= 17 && i < 18.5) {
            printf("\nAbaixo do peso.");
    } else if(i >= 18.5 && i < 25) {
            printf("\nPeso normal.");
    } else if(i >= 25 && i < 30) {
            printf("\nAcima do peso.");
    } else if(i >= 30 && i < 35) {
            printf("\nObesidade grau 1.");
    } else if(i >= 35 && i < 40) {
            printf("\nObesidade grau 2.");
    } else if(i > 40) {
            printf("\nObesidade grau 3.");
    }

return 0;
}
